rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             (request.auth.token.email == 'info@indiannaturalhair.com' ||
              request.auth.token.admin == true);
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Public read access for products and config (for unauthenticated users)
    match /products/{productId} {
      allow read: if true;
      allow write: if true; // Allow service account access for sync and admin interface
    }
    
    match /config/{configId} {
      allow read: if true;
      allow write: if true; // Allow admin interface access
    }
    
    // Allow public access for admin interface
    match /salesmen/{salesmanId} {
      allow read, write: if true;
    }
    
    // Admin-only collections for data management
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    
    match /uploads/{uploadId} {
      allow read, write: if isAdmin();
    }
    
    match /audit_logs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // User-specific collections
    match /clients/{clientId} {
      allow read, write: if isAuthenticated();
    }
    
    match /quotes/{quoteId} {
      allow read, write: if true; // Allow public access for quotes functionality
    }

    match /orders/{orderId} {
      allow read, write: if true; // Allow public access for orders functionality
    }

    // Salesmen data - read for all authenticated, write for admin
    match /salesmen/{salesmanId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Sync logs - allow service account access
    match /sync_logs/{logId} {
      allow read, write: if true; // Allow service account access
    }
    
    // Storage collection for localStorage replacement
    match /storage/{storageId} {
      allow read, write: if true; // Allow public access for localStorage replacement
    }
    
    // User profiles
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Default deny for all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}