rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions for authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             (request.auth.token.email == 'info@indiannaturalhair.com' ||
              request.auth.token.admin == true);
    }
    
    function isAdminEmail() {
      return isAuthenticated() && request.auth.token.email == 'info@indiannaturalhair.com';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidExcelFile() {
      return resource.contentType.matches('application/vnd.openxmlformats-officedocument.spreadsheetml.sheet') ||
             resource.contentType.matches('application/vnd.ms-excel') ||
             request.resource.name.matches('.*\\.(xlsx|xls)$');
    }
    
    function isValidImageFile() {
      return resource.contentType.matches('image/.*') ||
             request.resource.name.matches('.*\\.(jpg|jpeg|png|gif|webp|svg)$');
    }
    
    // Public read access for product images
    match /products/{productId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidImageFile();
    }
    
    // User-specific client documents
    match /clients/{clientId}/{fileName} {
      allow read, write: if isAuthenticated();
    }
    
    // User-specific quote exports
    match /quotes/{quoteId}/{fileName} {
      allow read, write: if isAuthenticated();
    }
    
    // Admin-only Excel imports with validation
    match /imports/{fileName} {
      allow read: if isAdminEmail() || isAdmin();
      allow write: if (isAdminEmail() || isAdmin()) && isValidExcelFile() && 
                      request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }
    
    // Admin-only backup files
    match /backups/{fileName} {
      allow read, write: if isAdmin();
    }
    
    // Admin-only upload staging area
    match /uploads/{uploadId}/{fileName} {
      allow read, write: if (isAdminEmail() || isAdmin()) && isValidExcelFile() &&
                          request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }
    
    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if true;
      allow write: if (isOwner(userId) || isAdmin()) && isValidImageFile();
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}